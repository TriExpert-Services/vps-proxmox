# Application Configuration
NODE_ENV=development
APP_NAME=CloudVPS Pro
APP_VERSION=1.0.0
APP_PORT=3000
APP_BASE_URL=http://localhost:3000
APP_DEBUG=true

# Proxmox VE Configuration
PROXMOX_HOST=your-proxmox-host.com
PROXMOX_PORT=8006
PROXMOX_USERNAME=root
PROXMOX_PASSWORD=your-proxmox-password
PROXMOX_REALM=pam
PROXMOX_PROTOCOL=https

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloudvps
DB_USERNAME=cloudvps
DB_PASSWORD=your-db-password
DB_SSL=false
DB_POOL_SIZE=10

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
EMAIL_PROVIDER=smtp
# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# AWS SES Configuration (if using SES)
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Email Settings
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=CloudVPS Pro

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Monitoring Configuration
MONITORING_ENABLED=true
LOG_LEVEL=info
METRICS_ENDPOINT=https://your-metrics-endpoint.com
ALERTING_WEBHOOK_URL=https://your-alerting-webhook.com
SLACK_CHANNEL=#alerts

# Feature Flags
FEATURE_AUTO_PROVISIONING=true
FEATURE_BACKUP_SCHEDULING=true
FEATURE_USAGE_BILLING=false
FEATURE_MULTIPLE_OS=true
FEATURE_CUSTOM_NETWORKING=false
FEATURE_API_ACCESS=true

# Production Overrides (only set in production)
# PRODUCTION_BASE_URL=https://your-production-domain.com
# STAGING_BASE_URL=https://staging.your-domain.com