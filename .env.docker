# Docker Environment Configuration
# Copy this file to .env for Docker deployment

# Application
NODE_ENV=production
APP_NAME=CloudVPS Pro
APP_PORT=3000
APP_BASE_URL=http://localhost

# Database Configuration (Docker services)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cloudvps
DB_USERNAME=cloudvps
DB_PASSWORD=secure_database_password_change_this
DB_SSL=false
DB_POOL_SIZE=10

# Redis Configuration (Docker service)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_change_this

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=12

# Proxmox VE Configuration
PROXMOX_HOST=your-proxmox-host.com
PROXMOX_PORT=8006
PROXMOX_USERNAME=cloudvps@pve
PROXMOX_PASSWORD=your-proxmox-password
PROXMOX_REALM=pam
PROXMOX_PROTOCOL=https

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=CloudVPS Pro

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGINS=http://localhost,https://yourdomain.com

# Monitoring Configuration
MONITORING_ENABLED=true
LOG_LEVEL=info

# Feature Flags
FEATURE_AUTO_PROVISIONING=true
FEATURE_BACKUP_SCHEDULING=true
FEATURE_USAGE_BILLING=false
FEATURE_MULTIPLE_OS=true
FEATURE_CUSTOM_NETWORKING=false
FEATURE_API_ACCESS=true